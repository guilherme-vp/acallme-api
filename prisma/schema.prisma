datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Patient {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  password        String
  birth           DateTime
  gender          Gender
  phone           String?
  cpf             String   @unique
  isEmailVerified Boolean? @default(false) @map("is_email_verified")
  isTourCompleted Boolean  @default(false) @map("is_tour_completed")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("pacients")
}

model Specialist {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  password        String
  birth           DateTime
  gender          Gender
  phone           String?
  isEmailVerified Boolean? @default(false) @map("is_email_verified")
  isTourCompleted Boolean  @default(false) @map("is_tour_completed")
  specialty       String
  cpf             String   @unique
  cnpj            String   @unique
  crp             String?  @unique
  crm             String?  @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("specialists")
}

enum Gender {
  M
  F
}
